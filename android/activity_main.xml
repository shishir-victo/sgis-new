<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_marginBottom="32dp"
        android:contentDescription="App Logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classroom Attendance"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_take_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Attendance"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@android:drawable/ic_menu_camera"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_view_students"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Students"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:gravity="center" />

    <Button
        android:id="@+id/btn_view_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Attendance Reports"
        android:padding="16dp"
        android:drawableLeft="@android:drawable/ic_menu_recent_history"
        android:gravity="center" />

</LinearLayout>
